<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="sensorLandscape"

    >


        <LinearLayout

            android:id="@+id/gameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </LinearLayout>

    <Button
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:background="@drawable/pause_game_button_background"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:fontFamily="@font/nikea"
        android:letterSpacing="0.1"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:backgroundTint="@null"
        android:paddingBottom="16dp"
        android:stateListAnimator="@null"
        android:text="Pause"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="16dp" />
    <Button
        android:enabled="false"
        android:id="@+id/btnStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/start_game_button_background"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:fontFamily="@font/nikea"
        android:letterSpacing="0.1"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:backgroundTint="@null"
        android:paddingBottom="16dp"
        android:stateListAnimator="@null"
        android:text="Start\nGame"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />
    <Button
        android:visibility="gone"
        android:id="@+id/btnSkipRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/skip_button_background"
        android:drawableStart="@drawable/game_button_icon"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:fontFamily="@font/nikea"
        android:letterSpacing="0.1"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:backgroundTint="@null"
        android:paddingBottom="16dp"
        android:stateListAnimator="@null"
        android:text="SKIP"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btnPopUpMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_background"
        android:drawableStart="@drawable/game_button_icon"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:fontFamily="@font/nikea"
        android:letterSpacing="0.1"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:stateListAnimator="@null"
        android:text="BUILD"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSelectBuildingMenu"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Enhanced Menu header with better spacing and typography -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:clickable="true"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-medium"
                    android:text="Select Building"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnCloseMenu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    app:tint="#757575" />
            </RelativeLayout>

            <!-- Divider for visual separation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E0E0E0"
                android:padding="0dp" />

            <!-- Enhanced Scrollable building list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/buildingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_background"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="8dp"
                android:scrollbars="none" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:max="100"
        android:progress="50"
        android:visibility="gone"
        android:progressTint="@color/red"
        android:progressBackgroundTint="@color/white"
        android:scaleY="2"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>