<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="#33000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#7209b7">

        <!-- rank & username row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/nikea"
                android:textColor="#3a0ca3"/>

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nikea"
                android:text="Username"
                android:textColor="#3a0ca3"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- stats grid -->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:useDefaultMargins="true"
            app:alignmentMode="alignMargins"
            app:columnOrderPreserved="false"
            card_view:columnCount="2"
            card_view:rowCount="2">

            <!-- each cell uses margin rather than unsupported gap attrs -->
            <TextView
                style="@style/TextAppearance.Material3.BodySmall"
                android:id="@+id/tvMaxRound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="4dp"
                android:text="ðŸ† Max: 0"
                android:textColor="@color/leaderboard_text"/>

            <TextView
                style="@style/TextAppearance.Material3.BodySmall"
                android:id="@+id/tvGamesPlayed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="4dp"
                android:text="ðŸŽ® Plays: 0"
                android:textColor="@color/leaderboard_text"/>

            <TextView
                style="@style/TextAppearance.Material3.BodySmall"
                android:id="@+id/tvEnemiesDefeated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="4dp"
                android:text="ðŸ’€ Defeat: 0"
                android:textColor="@color/leaderboard_text"/>

            <TextView
                style="@style/TextAppearance.Material3.BodySmall"
                android:id="@+id/tvVictories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="4dp"
                android:text="ðŸ… Wins: 0"
                android:textColor="@color/leaderboard_text"/>

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
